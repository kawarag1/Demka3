<Window x:Class="Demka3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Demka3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Icon="/Resources/Images/Наш декор.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="#BBD9B2">
            <TextBlock x:Name="Title" HorizontalAlignment="Center" Foreground="#2D6033" FontFamily="Gabriola" FontSize="24" FontWeight="ExtraBold" VerticalAlignment="Center"/>
            <Button Background="#2D6033" Foreground="White" x:Name="BackBtn" Content="Назад" FontFamily="Gabriola" FontSize="18" HorizontalAlignment="Right" Visibility="Collapsed" Margin="10" Height="35" Width="120" VerticalAlignment="Center" Click="BackBtn_Click"/>
            <Button Background="#2D6033" Foreground="White" x:Name="AddProductBtn" FontFamily="Gabriola" FontSize="18" Content="Добавить продукт" HorizontalAlignment="Right" Visibility="Visible" Margin="10" Height="35" Width="120" VerticalAlignment="Center" Click="AddProductBtn_Click"/>
            <Button Background="#2D6033" Foreground="White" x:Name="CountMaterialsBtn" FontFamily="Gabriola" FontSize="18" Content="Рассчитать" HorizontalAlignment="Right" Visibility="Visible" Margin="0,0,140,0" Height="35" Width="120" VerticalAlignment="Center" Click="CountMaterialsBtn_Click"/>
            <Image Source="/Resources/Images/Наш декор.png" Height="Auto" Width="Auto" HorizontalAlignment="Left" Grid.Row="0"/>
        </Grid>
        <Frame x:Name="FrmMain" NavigationUIVisibility="Hidden" ContentRendered="FrmMain_ContentRendered" Grid.Row="1"/>
    </Grid>
</Window>
